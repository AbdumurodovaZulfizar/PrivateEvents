<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field col-12 col-md-6">
    <%= f.label :email, class:'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', id:'email' %>
  </div>

  <div class="field col-12 col-md-6">
    <%= f.label :password, class:'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control', id:'password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field col-12 col-md-6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-light my-2', id:'login' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
