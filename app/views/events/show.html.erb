
<% if @event.creator == current_user %>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card border text-center px-3">

      <div class="card-header">
      <div class="wrap_card">
        <div class="w-100">
          <%= render 'events/invites' %>
          <%= render 'events/accepted' %>
        </div>
        <div>
            <h1> <%= @event.name %></h1>
            <hr>
        </div>

      </div>
      <div class="card-body">

        <p class="card-text"><%= @event.description %> </p>
        <%= render 'events/invite' %>

        <h5 class="text-right mr-2"> by <%= @event.creator.name %> </h5>
        <hr>
      </div>
      <div class="card-footer text-muted">
      <p class='text-center'> date <%= @event.date %></p>
      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_event_path(@event), class:'text-dark' %>
<%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class:'text-dark' %>

<% else %>
  <p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>
<% end %>

